{
  "name": "magic-pages-work",
  "version": "2.0.0",
  "description": "Creates a connect middleware mock API from Swagger",
  "author": "cdcabrera",
  "contributors": [
    {
      "name": "dzdrazil",
      "url": "https://github.com/dzdrazil/swagger-mock-api"
    },
    {
      "name": "marcusnaweb"
    },
    {
      "name": "kohashi"
    },
    {
      "name": "zzswang"
    }
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cdcabrera/magic-pages-work"
  },
  "bugs": {
    "url": "https://github.com/cdcabrera/magic-pages-work/issues"
  },
  "keywords": [
    "swagger",
    "mock",
    "api",
    "swagger-mock-api"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "bin": {
    "mock": "./bin/cli.js"
  },
  "scripts": {
    "build:deps": "bash ./scripts/dependencies.sh --doctor -u --doctorInstall \"yarn\" --doctorTest \"yarn test:deps\"",
    "release": "changelog",
    "start": "./bin/cli.js",
    "start:dev": "export NODE_ENV=development; node ./bin/cli.js",
    "test": "run-s -l test:lint test:spell* test:ci",
    "test:ci": "export CI=true; jest --collectCoverage",
    "test:clearCache": "jest --clearCache",
    "test:deps": "run-s test",
    "test:dev": "eslint ./src ./bin; run-s test:spell test:local",
    "test:integration": "export CI=true; jest --roots=./tests",
    "test:integration-dev": "jest --roots=./tests --watch",
    "test:lint": "eslint ./src ./bin",
    "test:local": "jest --watch",
    "test:spell-docs": "cspell ./README.md ./CONTRIBUTING.md --config ./cspell.config.json",
    "test:spell": "cspell './src/**/*.js' './tests/**/*.js' --config ./cspell.config.json"
  },
  "jest": {
    "roots": [
      "src",
      "bin"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 30,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/.*/**",
      "!src/logger/*"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>jest.setupTests.js"
    ]
  },
  "dependencies": {
    "@apidevtools/swagger-parser": "^10.1.0",
    "fs-extra": "^11.1.0",
    "express": "^4.18.2",
    "yargs": "^17.6.2"
  },
  "devDependencies": {
    "changelog-light": "^0.2.2",
    "cspell": "^6.16.0",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.6",
    "eslint-plugin-jsdoc": "^39.6.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.3.1",
    "npm-check-updates": "^16.4.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.0"
  }
}
